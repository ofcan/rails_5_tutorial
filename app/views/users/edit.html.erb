
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= render 'form' %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank" rel="noopener">change</a>
      <!-- 
        target="_blank" opens the link in the new tab- a neat little trick! 
        rel="noopener" prevents phishing attacks!
        -->
    </div>

  </div>

</div>
