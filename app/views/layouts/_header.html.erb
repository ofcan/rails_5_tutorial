
<header class="navbar navbar-fixed-top navbar-inverse">
  
  <div class="container">
    <%= link_to "Ritter", root_path, id: "logo" %>
    
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "What's this about?", about_path, id: "about" %></li>
        <li><%= link_to "See all users", users_path, id: "users" %></li>

        <% if logged_in? %>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              My account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete", id: "log_out" %>
              </li>
            </ul>
          </li>

        <% else %>
        
          <li><%= link_to "Sign up", new_user_path, id: "sign_up" %></li>
          <li><%= link_to "Log in", login_path, id: "log_in" %></li>

        <% end %>

      </ul>

    </nav>
    
  </div>
  
</header>
